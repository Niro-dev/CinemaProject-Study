@using CinemaProject.Models
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Cinema", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            @if (User.IsInRole(RoleName.Admin))
            {
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Manage Customers Tickets", "Index", "Customer")</li>
                    <li>@Html.ActionLink("Manage Screens", "Index", "Screenings")</li>
                    <li>@Html.ActionLink("Movies", "Index", "Movies")</li>
                    <li>@Html.ActionLink("My Cart", "Index", "Cart")</li>
                </ul>
            }
            @if (!User.IsInRole(RoleName.Admin))
            {
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Movies", "Index", "Movies")</li>
                    <li>@Html.ActionLink("My Cart", "Index", "Cart")</li>
                </ul>
            }
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>